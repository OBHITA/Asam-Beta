@model HandleErrorInfo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <title>Error - Not Found</title>
    </head>
    <body>
        <div>
            <h2>The page you requested cannot be found.</h2>
            @{
                if (Request.IsLocal)
                {
                    if (@Model != null && @Model.Exception != null)
                    {
                        <p>
                            <b>Controller</b>: @ViewData.Model.ControllerName
                        </p>
                        <p>
                            <b>Action</b>: @ViewData.Model.ActionName
                        </p>
                        <p>
                            <b>Message</b>: @ViewData.Model.Exception.Message
                        </p>
                        <p>
                            <b>Stack Track</b>: @ViewData.Model.Exception.StackTrace
                        </p>
                    }
                    else
                    {
                        <p>Exception is null</p>
                    }
                }
                else
                {
                    <p>A fatal error has occured please report this error to your ASAM Criteria Software account representative.</p>
                }
            }
        </div>
    </body>
</html>